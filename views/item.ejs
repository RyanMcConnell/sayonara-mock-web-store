<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--VIEWPORT-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--PERSONAL STYLESHEET-->
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/footer.css">
    <link rel="stylesheet" type="text/css" href="/css/item.css">
    <!--FONTS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@700&display=swap" rel="stylesheet">
    <!--FAVICON-->
    <link rel="shortcut icon" type="image/jpg" href="/images/products/sayonara-sticker-collection-1.png"/>
    <title>Item</title>
</head>

<body>

    <%- include('../partials/navbar'); %>

        <main class="main-content">
            <div class="left-side">
                <div class="image-container">
                    <img src="/images/products/<%= product.imageKey %>.png" class="item-image">
                </div>
            </div>
            <div class="item-information">
                <h1 class="item-name">
                    <%= product.name %>
                </h1>
                <p class="item-description">
                    <!--ITEM DESCRIPTION WHEN ADDED GOES HERE-->
                </p>
                <p class="item-price">
                    <%= product.price %>
                </p>
                <button class="add-to-cart" onclick="">ADD TO CART</button>
            </div>
        </main>

        <div class="item-description-container">
            <h2 class="item-description-title">Item Description:
            </h2>
            <p>
                <%= product.description %>
            </p>
        </div>

        <div class="related-items-container">
            <h2 class="related-items-title">Related Items</h2>
            <div class="related-items-list-container">
                <div class="related-items-container">
                    <% for(let items of allProducts) { %>
                        <% if(items.category === product.category) { %>
                            <div class="related-item">
                                <img class="related-items-image" src="/images/products/<%= items.imageKey %>.png">
                                <h3 class="related-items-name"><%= items.name %></h3>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>

        <%- include('../partials/footer'); %>
</body>
</html>